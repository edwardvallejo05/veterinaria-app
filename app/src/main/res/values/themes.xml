<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MascotasApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary1</item>
        <item name="colorPrimaryVariant">@color/primary1</item>
        <item name="colorOnPrimary">@color/primary3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color21</item>
        <item name="colorSecondaryVariant">@color/color6</item>
        <item name="colorOnSecondary">@color/color19</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MascotasApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MascotasApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MascotasApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.MascotasApp.Fullscreen" parent="Theme.MascotasApp">
        <item name="android:actionBarStyle">@style/Theme.MascotasApp.NoActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MascotasApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:actionBarStyle">@style/Widget.AppTheme.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@null</item>

    </style>

</resources>